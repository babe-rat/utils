{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "typeRoots": ["./typings", "uuid"]
    },
    "include": ["./.eslintrc.js", "src"]
}
